<div class="container deals">
  <div class="title">
    <h2>Create Deal</h2>
  </div>
  
  <%= form_for @deal do |form| %>
    <p>
      <%= form.label :wins_remaining %><br>
      <%= form.text_field :wins_remaining %>
    </p>
    <p>
      <%= form.label :wins %><br>
      <%= form.text_field :odds_numerator %>
    </p>
    <p>
      <%= form.label :out_of %><br>
      <%= form.text_field :odds_denominator %>
    </p>
    <p>
      <%= form.label :description %><br>
      <%= form.text_field :description %>
    </p>
    <p>
      <%= form.submit :class => "sign-up-submit btn btn-outline-dark btn-block" %>
    </p>
  <% end %>
</div>

