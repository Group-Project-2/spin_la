$('body').click(function(){
  $('#no_win').text("<%= flash[:notice] %>").delay( 1000 );
  $('#no_spin').text("<%= flash[:alert] %>").delay( 1000 );
  $('#spin_win').text("<%= flash[:success] %>").delay( 1000 );
  $('#spin_lose').text("<%= flash[:error] %>").delay( 1000 );
});

$('#wins_remaining').text("Wins Remaining: <%= @deal.wins_remaining %>");
$('#status-<%=current_user.id%>').text("Spins available: <%= current_user.spins_remaining %>");
$('#spins-left').text("Spins: <%= current_user.spins_remaining %>");