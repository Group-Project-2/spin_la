<div id="clearance" class="password-reset container">
  <div class="title">
    <h2><%= t(".title") %></h2>
  </div>

  <%= form_for :password, url: passwords_path do |form| %>
    <div class="text-field">
      <%= form.label :email %>
      <%= form.text_field :email, type: 'email' %>
    </div>

    <div class="submit-field">
      <%= form.submit :role => "button", :class => "mt-2 btn btn-block btn-outline-dark"%>
    </div>
  <% end %>
</div>
