<div class="container-fluid" id="user_profile">
		<div class="d-flex justify-content-around">
			<div class="img col-sm-4">
				<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT5lhdQy2fMHepvvvD04-W8o4hH0rvZaKD6CulU2zwpYLScps93ng">
			</div>

			<div class="col-sm-8 p-4">
				<h2><%= @user.first_name %> <%= @user.last_name %></h2>
				<h5>Baker by day, florist by night.</h5>
				<h5><%= @user.email %></h5>
			</div>
		</div>

		<br><h5 style="padding-left: 15px;">Deals won:</h5>

		<div class="row">
			<% @user.deals_won.each do |deal| %>
			<div class="col-md-4">
				<div class="card mt-3">
					<div class="card-header">
						<h5 class="card-title"><%= Deal.find(deal).company.name %></h5>
					</div>
					<div class="card-body">
						<img src="https://www.bbcgoodfood.com/sites/default/files/styles/recipe/public/recipe/recipe-image/2017/06/teacake.jpg?itok=-39KjF-f" class="img-fluid">
						<p class="card-text"><%= Deal.find(deal).description %></p>
					</div>
					<div class="card-footer">
						<small class="text-muted"><%= Deal.find(deal).updated_at %></small>
					</div>
				</div>
			</div>
			<% end %>
		</div>

		<div class="btn btn-sm btn-outline-light">
			<!-- Link to switch view from user to company, if company available-->
			<% if current_user.role == "admin" || current_user.role == "business" %> 
			<% @company = Company.find_by(user_id: current_user.id) %>
			<%= link_to "Switch to Company View", company_path(@company) %>
			<% end %>
			
		</div>

	</div>
