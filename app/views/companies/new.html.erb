<div class="container-fluid company-background">

  <div class="container company" data-aos="zoom-out" data-aos-duration="1100">

    <div class="title">
      <h2>Create a Company</h2>
    </div>

  <%= form_for @company do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name, :required => "true", :autocomplete => "off" %>
    </p>
    <p>
      <%= form.label :description%><br>
      <%= form.text_field :description, :required => "true", :autocomplete => "off" %>
    </p>
    <p>
      <%= form.label :address %><br>
      <%= form.text_field :address, :required => "true", :autocomplete => "off" %>
    </p>
    <p>
      <%= form.label :email %><br>
      <%= form.text_field :email, :required => "true", :autocomplete => "off" %>
    </p>
    <p>
      <%= form.label :phone_number %><br>
      <%= form.text_field :phone_number, :required => "true", :autocomplete => "off" %>
    </p>
    <p>
      <%= form.label :upload_photos %><br>
      <%= form.file_field :avatars, multiple: true, :class => "inputfile" %>
    </p>
    <p>
      <%= form.submit :class => "sign-up-submit btn btn-outline-dark btn-block" %>
    </p>
    <p>
      <%= link_to "Back to Deals Page", deals_path, :role => "button", :class => "sign-up-submit btn btn-outline-dark btn-block" %>
    </p>
  <% end %>

  </div>

</div>

