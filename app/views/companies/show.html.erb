<div class="container-fluid company-profile">

<div class="container-fluid company-profile-div">
	<div class="container">
		<div class="row pt-4">
			<div id="col-1" class="col-md-4">
				<img src="https://i1.wp.com/www.winhelponline.com/blog/wp-content/uploads/2017/12/user.png?fit=256%2C256&quality=100&ssl=1" alt="">
			</div>
			<div id="col-2" class="col-md-8 text-right">
				<h1 class="text-shadow"><%= @company.name %></h1>
				<h2 class="text-shadow">
					<i class="far fa-address-book"></i>
					<%= @company.address %>
				</h2>
				<h2 class="text-shadow">
					<i class="fas fa-phone-volume"></i>
					<%= @company.phone_number %>
				</h2>
				<h2 class="text-shadow">
					<i class="far fa-envelope"></i>
					<%= @company.email %>
				</h2>
			</div>
		</div>
	</div>
</div>

<div class="container-fluid company-deal-div">
	<div class="container">
		<h1 class="text-white mt-4 text-shadow">Company Deal</h1>
		<div class="row">
		<% Deal.all.each do |deal| %>
		<div class="col-md-4 mt-4">
			<div class="card card-shadow text-center">
				<div class="card-header">
					<h3><%= deal.description %></h3>
				</div>
				<div class="card-body">
					<img src="https://s3-ap-southeast-1.amazonaws.com/pizzahutmy/menu/BlazingSeafood-L-1486726693.png" alt="">
					<p class="card-text">Winning Odds: <%= (deal.odds_numerator)/(deal.odds_denominator).to_r %></p>
					<p class="card-text">Wins Remaining: <%= deal.wins_remaining %></p>
				</div>
			</div>
		</div>
		<% end %>
		</div>
		<%= link_to 'Create new deal', new_deal_path, :role => "button", :class => "btn btn-light mt-4 card-shadow" %>
	</div>
</div>

<div class="container">
	<h1 class="text-white mt-4 text-shadow">Recent reviews, ordered by latest</h1>
	<div class="row">
		<% @company.reviews.order(created_at: :desc).each do |review| %>
		<div class="col-md-4 my-4">
			<div class="card card-shadow">
				<div class="card-body">
					<h5 class="card-title"><span>Title: </span><%= review.title %></h5>
					<p class="card-text"><span>Description: </span><%= review.description %></p>
					<p class="card-text"><span>Ratings: </span><%= review.stars %></p>
					<% if !review.reported && review.user_id != current_user.id %>
						<p><%= link_to 'Report this review', report_path(review), method: :patch, remote: true, id: "report_review" %></p>
					<% elsif review.reported == true %>
						<p><%= link_to 'Report this review', report_path(review), method: :patch, remote: true, id: "review_reported" %></p>
					<% end %>
				</div>
			</div>
		</div>
		<% end %>
	</div>
	<%= link_to 'Write a Review', new_company_review_path(@company), :role => "button", :class => "btn btn-light mt-2 mb-4 card-shadow" %>
</div>

</div>

</div>




